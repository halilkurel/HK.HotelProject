<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Personel Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.staff</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>

                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Rezervasyon Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.booking</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Müşteri Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.guest</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-user-circle"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Oda Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.room</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-bed"></i></span>
            </div>
        </div>
    </div>
</div>