@model List<HK.HotelProject.WebUI.Dtos.AppUserDtos.ResultAppUserListDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Şehir</th>
            <th>Şube</th>
            <th>Durum</th>
            <th>Cinsiyer</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                <td>@item.City</td>
                <td>
                    <span>@item.WorkLocationName</span>
                </td>
                <td>
                    <div>
                        <div class="progress" style="height: 6px">
                            <div class="progress-bar bg-success" style="width: 90%"></div>
                        </div>
                    </div>
                </td>
                @if(item.Gender == "Erkek")
                {
                    <td><i class="fa fa-circle-o text-success  mr-2"></i>Erkek</td>
                }
                @if(item.Gender == "Kadın")
                {
                    <td><i class="fa fa-circle-o text-warning  mr-2"></i>Kadın</td>
                }
                
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>


