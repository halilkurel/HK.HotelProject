@model HK.HotelProject.WebUI.Models.Settings.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profil Bilgileri ve Şifre Güncelleme</h1>
<form method="post">
    <label>Adınız</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="SurName" />
    <br />
    <label>Kullanıcı Adınız</label>
    <input type="text" class="form-control" asp-for="UserName" readonly />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Şifreniz</label>
    <input type="text" class="form-control" asp-for="Password" />
    <br />
    <label>Şifreniz Tekrar</label>
    <input type="text" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Bilgileri Güncelle</button>
</form>

