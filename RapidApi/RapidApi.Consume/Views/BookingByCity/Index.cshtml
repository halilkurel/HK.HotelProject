@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0; // Start the count from 1
}


<div class="container">
    <br /><br />
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Şehir Id Giriniz</label>
        <input type="text" class="form-control" name="cityId">
        <br />
        <button class="btn btn-primary">Şehir için Otelleri Bul</button>
    }

    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
            count++;
        }
    </table>
</div>
